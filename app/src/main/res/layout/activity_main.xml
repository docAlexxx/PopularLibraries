<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_one_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextOne"/>

    <Button
        android:id="@+id/button_one_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st Button"/>

    <TextView
        android:id="@+id/text_two_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextTwo"/>

    <Button
        android:id="@+id/button_two_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Button"/>

    <TextView
        android:id="@+id/text_three_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Three"/>

    <Button
        android:id="@+id/button_three_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3rd Button"/>


</androidx.appcompat.widget.LinearLayoutCompat>